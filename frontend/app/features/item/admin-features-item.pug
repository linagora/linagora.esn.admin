.lv-item.media
  .media-body
    .lv-title {{$ctrl.feature.name | esnI18n}}
    small {{$ctrl.feature.description | esnI18n}}
    .lv-attrs
      .lv-small #{__('Display in:')}
      label.checkbox.checkbox-inline(ng-repeat="configuration in $ctrl.feature.configurations")
        input(type="checkbox", ng-model="configuration.value", ng-change="$ctrl.onConfigChange()")
        i.input-helper
        | {{configuration.displayIn | esnI18n}}
