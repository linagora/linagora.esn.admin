sub-header
  admin-session-subheader(on-form-submit="$ctrl.save()", form="form")

form(name="form", admin-loading-status)
  .card
    .card-body.card-padding
      .row
        .col-xs-6
          h5 #{__('Secret')}
          p.text-muted #{__('The secret used to sign the session ID cookie, change this will log all users out')}
          esn-form-group(label=__('Secret'))
            input.form-control(type="text", aria-expanded="false", ng-model="$ctrl.config.secret", auto-focus, name="secret", required)
        .col-xs-6
          h5 #{__('Time to live')}
          p.text-muted #{__('The number of milliseconds until the session ID cookie becomes invalid')}
          esn-form-group(label=__('Time to live'))
            input.form-control(type="number", ng-model="$ctrl.config.cookie.maxAge", name="time-to-live", required)
