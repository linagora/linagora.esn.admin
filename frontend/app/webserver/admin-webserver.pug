sub-header
  admin-web-subheader(on-form-submit="$ctrl.save()", form="form")

form(name="form", admin-loading-status)
  .card
    .card-header
      h2 #{__('Proxy settings')}
    .card-body.card-padding
      .row
        .col-xs-12.col-md-6
          label.checkbox.checkbox-inline
            input(type="checkbox", ng-model="$ctrl.config.webserver.proxy.trust")
            i.input-helper
            span #{__('Trust proxy')}
    .card-header
      h2 #{__('Max size upload')}
      small #{__('This max size upload will be used for  attachments collaborative')}
    .card-body.card-padding
      .row
        .col-xs-12.col-md-6
          admin-form-input-bytes(input-value="$ctrl.config.maxSizeUpload", min="1KB", max="50TB", label=__('Max size upload'), required="true")
