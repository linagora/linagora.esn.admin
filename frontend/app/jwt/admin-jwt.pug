sub-header
  admin-jwt-subheader(on-form-submit="$ctrl.save()", form="form")

form(name="form", admin-loading-status)
  .card
    .card-body.card-padding
      .row
        .col-md-6
          esn-form-group(label=__('Algorithm'))
            .select
              select.form-control(ng-model="$ctrl.config.algorithm", name="algorithm", ng-options="algorithm.name as algorithm.description for algorithm in $ctrl.availableAlgorithms", required)
      .row
        .col-md-6
          esn-form-group(label=__('Public key'))
            a.save(href="", ng-click="$ctrl.downloadPublicKey()", ng-show="$ctrl.config.publicKey")
              | #{__('Download')}
            textarea.form-control(rows="5", ng-model="$ctrl.config.publicKey", name="publicKey", required)
        .col-md-6
          esn-form-group(label=__('Private key'))
            a.save(href="", ng-click="$ctrl.downloadPrivateKey()", ng-show="$ctrl.config.privateKey")
              | #{__('Download')}
            textarea.form-control(rows="5", ng-model="$ctrl.config.privateKey", name="privateKey", required)
      .row
        .col-xs-12
          button.btn.btn-primary.btn-sm.pull-right(type="button", esn-submit="$ctrl.generate(form)")
            i.mdi.mdi-sync
            | #{__('Generate keys')}
